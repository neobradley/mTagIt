<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friend_profile"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/imgFriendAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/upic" />

        <TextView
            android:id="@+id/txtFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/imgFriendAvatar"
            android:text="NAME"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtFriendPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFriendName"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/imgFriendAvatar"
            android:text="Points : 999"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtFriendRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtFriendPoint"
            android:layout_below="@+id/txtFriendPoint"
            android:text="Rank : Ultimate"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtFriendAch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtFriendRank"
            android:layout_below="@+id/txtFriendRank"
            android:text="Total Achievement : 999/999"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/btnFriendAchievements"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/achievements2" />

            <ImageView
                android:id="@+id/btnFriendActivities"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/activities_friend" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/btnFriendTransfer"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/transfer" />

            <ImageView
                android:id="@+id/btnFriendUnfollow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/unfriend" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>