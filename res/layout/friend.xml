<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lists" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp" >

            <ImageView
                android:id="@+id/btnFriendAbout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/about_us" />

            <ImageView
                android:id="@+id/btnFriendSetting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnFriendAbout"
                android:src="@drawable/setting" />

            <ImageView
                android:id="@+id/btnFriendSync"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnFriendSetting"
                android:src="@drawable/sync" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:id="@+id/btnFriends"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/profile4" />

            <ImageView
                android:id="@+id/btnFriendAnP"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnFriends"
                android:src="@drawable/profile3" />

            <ImageView
                android:id="@+id/btnFriendHome"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btnFriendAnP"
                android:src="@drawable/profile2" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listFriend"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="3dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:orientation="vertical" >
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnFriendAdd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/add" />

            <ImageView
                android:id="@+id/btnFriendAll"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/friends" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnFriendByOther"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/other" />

            <ImageView
                android:id="@+id/btnFriendByMe"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/requests" />
        </LinearLayout>
        

    </LinearLayout>

</RelativeLayout>